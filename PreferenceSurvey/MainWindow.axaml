<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PreferenceSurvey.MainWindow"
        Title="PreferenceSurvey">
    
        <Grid HorizontalAlignment="Center" Width="200" Height="400">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                
                
                <TextBlock Grid.Row="0" Grid.Column="0" FontSize="20" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,20">Ankieta Preferencji</TextBlock>
                
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Podaj imię:" Margin="10"></TextBlock>
                <TextBox Grid.Row="1" Grid.Column="1" Name="TextBox1"></TextBox>
                
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Zainteresowanie:" Margin="10"></TextBlock>
                <ComboBox Grid.Row="2" Grid.Column="1" Name="ComboBox">
                        <ComboBoxItem Content="Sport"/>
                        <ComboBoxItem Content="Muzyka"/>
                        <ComboBoxItem Content="Programowanie"/>
                        <ComboBoxItem Content="Sztuka"/>
                        <ComboBoxItem Content="Coś innego"></ComboBoxItem>
                </ComboBox>
                
                <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Zatwierdź dane" Name="DataButton"></Button>
                
                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,20" FontSize="20">Pytania:</TextBlock>
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Co lubisz w programowaniu?:" Margin="10"></TextBlock>
                <TextBox Grid.Row="5" Grid.Column="1" Name="TextBox2"></TextBox>
                
                <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="W których językach przyjemnie ci się programuje?:" Margin="0,20,0,0"></TextBlock>
                
                <CheckBox Grid.Row="7" Grid.Column="0" Margin="10" Content="C#" Name="CheckBox1"> </CheckBox>
                <CheckBox Grid.Row="7" Grid.Column="1" Margin="10" Content="Kotlin" Name="CheckBox2"> </CheckBox>
                
                <CheckBox Grid.Row="8" Grid.Column="0" Margin="10" Content="Python" Name="CheckBox3"> </CheckBox>
                <CheckBox Grid.Row="8" Grid.Column="1" Margin="10" Content="JavaScript" Name="CheckBox4"> </CheckBox>
                
                <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Text="Podsumowanie:" Margin="0,20,0,0" HorizontalAlignment="Center" FontSize="20"></TextBlock>
                <Button Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Wyświetl podsumowanie" Name="SubmitButton"></Button>
                <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Margin="20" Name="StackPanel">
                        <TextBlock Name="Info" HorizontalAlignment="Center"></TextBlock>
                </StackPanel>
                
        </Grid>
        
</Window>
